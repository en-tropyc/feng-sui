{
  "name": "feng-sui-network",
  "version": "1.0.0",
  "description": "Feng-Sui Network Service - Post-quantum signature aggregation for QUSD",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node src/server.js",
    "test": "jest",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/integration.test.js",
    "test:e2e": "jest test/phase2b-end-to-end.test.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "post-quantum",
    "falcon",
    "signatures",
    "blockchain",
    "sui"
  ],
  "author": "QUSD Team",
  "license": "MIT",
  "dependencies": {
    "@mysten/sui": "^1.30.1",
    "@mysten/sui.js": "^0.54.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
